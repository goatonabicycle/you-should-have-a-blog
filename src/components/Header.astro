---
import { SITE_TITLE } from "../consts";
---

<header>
	<nav>
		<div class="nav-container">
			<div class="home-section">
				<a href="/" class="home-link">
					<span class="prompt">~</span>
					<span class="home-text">typesomewords</span>
				</a>
			</div>
			<div class="nav-links">
				<a href="/blog" class="nav-link">posts</a>
			</div>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0;
		border-bottom: 1px solid var(--border);
		background: var(--paper);
	}

	nav {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100%;
		padding: 1.5em 0;
	}

	.nav-container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		font-family: "SF Mono", "Monaco", "Inconsolata", "Fira Code", "Fira Mono",
			"Droid Sans Mono", "Courier New", monospace;
		width: 600px;
		max-width: calc(100% - 2em);
		margin: 0 auto;
		padding: 0 1em;
		position: relative;
	}

	.home-section {
		display: flex;
		align-items: center;
	}

	.home-link {
		display: flex;
		align-items: center;
		gap: 0.3em;
		text-decoration: none;
		color: var(--color-accent);
		transition: all 0.2s ease;
		font-weight: 600;
		font-size: 1em;
		position: relative;
		padding: 0.2em 0.4em;
		border-radius: 2px;
	}

	.home-link:hover {
		color: var(--ink);
		background: rgba(125, 211, 252, 0.05);
	}

	.prompt {
		color: var(--color-accent);
		font-weight: 700;
		transition: all 0.2s ease;
	}

	.home-text {
		font-weight: 600;
		transition: all 0.2s ease;
		position: relative;
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 1em;
	}

	.nav-link {
		color: var(--ink);
		text-decoration: none;
		font-size: 1em;
		font-weight: 400;
		padding: 0.2em 0.4em;
		border-radius: 2px;
		transition: all 0.2s ease;
		position: relative;
	}

	.nav-link:hover {
		color: var(--color-accent);
		background: rgba(125, 211, 252, 0.05);
	}

	.nav-link::before {
		content: "/";
		color: var(--color-dim);
		margin-right: 0.2em;
	}

</style>
